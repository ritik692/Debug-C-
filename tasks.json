{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with G++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
                "-lstdc++"
            ],
            "group": "build"
        }
    ]
}
